<!DOCTYPE html>
<html lang="es">
    <%- include("partials/head.ejs") %> 
<body>
    <%- include("partials/headerLogueado.ejs") %> 
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
            
            <% for(let i=0; i< resultado.length ; i+=1) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/product/<%= resultado[i].id_product %>">
                            <figure class="product-box_image">
                                <img src= "/images/products/<%= resultado[i].image_product %>" alt="autos" class="imgCards">
                            </figure>
                            <article class="product-box_data">
                                <h2> <%= resultado[i].name_product %>  </h2>
                                <p> <%= resultado[i].description %>  </p>
                                <p>Comentarios: <%= resultado[i].comments.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %> 
            <% if(locals.errors) { %>
                <div class="page">
                    <p class="error"> <%= errors.message %>  </p>
                </div>
            <% } %> 
        </div>
    </div>
        

            
	<!-- footer -->
    <%- include("partials/footer.ejs") %> 
	<!-- /footer -->
</body>

</html>