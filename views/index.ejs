<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
    <%- include("partials/head.ejs") %> 
<body>
	<!-- Header -->
        <%- include("partials/headerLogueado.ejs") %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show products -->
            <% for(let i=0; i< products.length ; i+=1) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/product/<%= products[i].id_product %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= products[i].image_product %>" alt="<%= products[i].name_product %> " class="imgCards">
                            </figure>
                            <article class="product-box_data">
                                <h2> <%= products[i].name_product %> </h2>
                                <p> <%= products[i].description %>  </p>
                                <p>Comentarios: <%= products[i].comments.length %> </p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %> 
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i< products.length ; i+=1) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/product/<%= products[i].id_product %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= products[i].image_product %>"  alt="<%= products[i].name_product %> " class="imgCards">
                            </figure>
                            <article class="product-box_data">
                                <h2> <%= products[i].name_product %> </h2>
                                <p> <%= products[i].description %>  </p>
                                <p>Comentarios: <%= products[i].comments.length %> </p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %> 
		</div>
	</div>
	<!-- /Más comentados -->

	<!-- footer -->
	<%- include("partials/footer.ejs") %> 
	<!-- /footer -->
</body>	
</html>
