<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("partials/head.ejs") %> 

<body>
	<!-- Header -->
	<%- include("partials/header.ejs") %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
            </div>

        <div class="containerForm">
            <div class="contact-form">
                <form action="/users/login" method="POST">
                    <p>
                        <label class="formLabel">Email</label>
                        <input class="inputForm" type="email" name="email">
                        <% if(locals.errors) { %>
                            <p class="error"> <% errors.message %>  </p>
                        <% } %> 
                    </p>
                    <p>
                        <label class="formLabel">Contrase√±a</label>
                        <input class="inputForm" type="password" name="password">
                        <% if(locals.errors) { %>
                            <p class="error"> <% errors.message %>  </p>
                        <% } %> 
                    </p>
                    <p>
                        <label class="recordarmeLabel">Recordarme</label>
                        <input type="checkbox" name="recordarme">
                    </p>
                    <p class="block">
                        <button type="submit">
                            INGRESAR
                        </button>
                    </p>
                </form>
                </div>
            </div>
        </div>
    </div>


	<!-- footer -->
	<%- include("partials/footer.ejs") %> 
	<!-- /footer -->
</body>

</html>