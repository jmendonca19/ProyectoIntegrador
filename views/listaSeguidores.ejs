<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
    <%- include("partials/head.ejs") %> 
<body>
	<!-- Header -->
	<%- include("partials/headerLogueado.ejs") %> 
	<!-- /Header -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Seguidores de <%= data.user %> </h2>
        </div>
        <% for(let i=0; i < data.leSiguen.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/users/profile/<%= data.leSiguen[i].seguidor.id_user %>">
                        <figure class="product-box_image">
                            <img src="/images/users/<%= data.leSiguen[i].seguidor.image_profile %>" alt="<%= data.leSiguen[i].seguidor.user %>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= data.leSiguen[i].seguidor.user %></h2>
                        </article>
                    </a>
                </section>
            </div>
        <% } %>
   </div>
</div> 

	<!-- footer -->
	<%- include("partials/footer.ejs") %> 
	<!-- /footer -->
</body>	
</html>