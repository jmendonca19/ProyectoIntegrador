<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
    <%- include("partials/head.ejs") %> 
<body>
	<!-- Header -->
	<%- include("partials/header.ejs") %> 
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= data.productos[0].nombreProducto %> </h2> 
			<p class="product-detail-description">
				<a class="products-title" href="/products/products-add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src= <%= data.productos[0].imagen %>  alt="" class="imagenProducto">
					<p class="product-detail-description">
						<%= data.productos[0].descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
                        <% for(let i=0; i< data.comentarios.length ; i+=1) { %>
						<article>
							<img src= <%= data.comentarios[i].fotoUsuarios %>  alt="">
							<div class="data">
								<p class="user">
								<strong><a href="/users/profile"><%= data.comentarios[i].usuario %>:</a></strong>
								<%= data.comentarios[i].comentario %>  </p>
							</div>
						</article>
                        <% } %> 

					</section>
					<form class="form" action="/products/product" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("partials/footer.ejs") %> 
	<!-- /footer -->

</body>	
</html>