<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("partials/head.ejs") %> 
<body>
	<!-- Header -->
	<%- include("partials/headerLogueado.ejs") %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="containerForm">
                <div class="contact-form">
                    <form action="/users/profile-edit/profileStore" method="POST">
                        <p>
                            <label class="formLabel">Nombre de usuario</label>
                            <input class="inputForm" type="text" name="user" value="<%= data.user %> ">
                        </p>
                        <p>
                            <label class="formLabel">Email</label>
                            <input class="inputForm" type="email" name="email" value="<%= data.email %> ">
                        </p>
                        <p>
                            <label class="formLabel">Contrase√±a</label>
                            <input class="inputForm" type="password" name="password">
                        </p>
                        <p>
                            <label class="formLabel">Fecha de nacimiento</label>
                            <input class="inputForm" type="date" name="fecha_nacimiento">
                        </p>
                        <p>
                            <label class="formLabel">Foto de perfil</label>
                            <input class="inputForm" type="file" name="image_profile">
                        </p>
                        <p class="block">
                            <button type="submit">
                                EDITAR PERFIL
                            </button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
	<!-- footer -->
	<%- include("partials/footer.ejs") %> 
	<!-- /footer -->
</body>

</html>